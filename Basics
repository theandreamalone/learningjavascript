house2.rooms = 4;
house2.color = "baige";
house2.priceUSD = 1200000;
// Object literals bracket
var house2 = {};
house2["rooms"] = 4;
house2["color"] = "pink";
house2["priceUSD"] = 12345;
console.log (house2);

