//New project Building anc calling functions
function letterFinder (word, match) {
    for(i=0; i < word.length; i++) {
    if(word[i] == match) {
    console.log("Found the", match, "at", i)
    } else {
        console.log("---No match found at", i)
    }
    }
    }
letterFinder("test", "t")
